{
    "tasks": [
        {
            "label": "setup.build.debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-D", "CMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "statusbar": {
                    "hide" : true
                  }
            },
            "problemMatcher": []
        },
        {
            "label": "build.debug",
            "type": "shell",
            "dependsOn": [ "setup.build.debug" ],
            "command": "make",
            "args": [
                "-C", "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "kill.clients",
            "type": "shell",
            "dependsOn": [],
            "command": "test/test.sh",
            "args": [
                "kill", "clients"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "launch.xephyr",
            "type": "shell",
            "dependsOn": [],
            "command": "test/test.sh",
            "args": [
                "launch", "xephyr"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        }
    ],
    "version": "2.0.0"
}