{
    "version": "0.2.0",
    "configurations": [
        {
        "name": "DWM Debug w/ GDB",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/dwm",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [ { "name": "DISPLAY", "value": ":4"}],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
            {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
            }
        ],
        "preLaunchTask": "build.debug"
        }
    ]
}